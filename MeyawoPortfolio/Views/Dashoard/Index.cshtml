﻿
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Static Modern Dashboard</title>
    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    <style>
        body {
            background-color: #f4f7fc;
            font-family: 'Nunito', sans-serif;
        }

        .dashboard-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transition: all 0.3s ease-in-out;
            cursor: pointer;
        }

            .dashboard-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 12px rgba(0,0,0,0.2);
            }

        .card-icon {
            font-size: 30px;
            width: 60px;
            height: 60px;
            line-height: 60px;
            text-align: center;
            border-radius: 30px;
            color: #fff;
            margin: 20px auto 10px;
        }

        .bg-primary {
            background-color: #007bff;
        }

        .bg-success {
            background-color: #28a745;
        }

        .bg-info {
            background-color: #17a2b8;
        }

        .bg-danger {
            background-color: #dc3545;
        }

        .bg-warning {
            background-color: #e64b0b;
        }

        .chart-container {
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            padding: 20px;
            margin-top: 50px;
        }

        a {
            text-decoration: none;
        }

        .text-bg-dark {
            background-color: blueviolet;
        }

        #myChart {
            font-size: 50px;
            margin: 20px auto 10px;
        }
        #myChart2 {
            font-size: 150px;
          
        }
    </style>
</head>
<body>

 
        <div class="row g-4">
            <!-- Dashboard Cards -->
            <div class="col-md-3">
                <div class="dashboard-card p-4 text-center">
                    <div class="card-icon bg-primary"><i class="fas fa-folder-open"></i></div>
                    <h5 class="card-title mb-2">Kategori Sayısı</h5>
                    <p class="card-text">17</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="dashboard-card p-4 text-center">
                    <div class="card-icon bg-success"><i class="fas fa-code-branch"></i></div>
                    <h5 class="card-title mb-2">Proje Sayısı</h5>
                    <p class="card-text">22</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="dashboard-card p-4 text-center">
                    <div class="card-icon bg-info"><i class="fas fa-project-diagram"></i></div>
                    <h5 class="card-title mb-2">Son Proje</h5>
                    <p class="card-text">Öğrenci Not Sistemi </p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="dashboard-card p-4 text-center">
                    <div class="card-icon bg-danger"><i class="fas fa-envelope-open-text"></i></div>
                    <h5 class="card-title mb-2">Mesaj Sayısı</h5>
                    <p class="card-text">67</p>
                </div>
            </div>
        </div>
     <div class="row g-4">
        <canvas id="myChart" style="width:50%"></canvas>

        <script>
            const xValues = ["Ziyaretçi Sayısı", "Proje İzlenme Sayısı", "Github Proje Sayısı", "İndirilen Proje Sayısı", "Beğenilen Proje Sayısı"];
            const yValues = [55, 49, 44, 44, 75];
            const barColors = [
                "#b91d47",
                "#00aba9",
                "#2b5797",
                "#e8c3b9",
                "#1e7145"
            ];

            new Chart("myChart", {
                type: "pie",
                data: {
                    labels: xValues,
                    datasets: [{
                        backgroundColor: barColors,
                        data: yValues
                    }]
                },
                options: {
                    title: {
                        display: true,
                        text: "İstatistikler"
                    }
                }
            });
        </script>




   

   
</body>
</html>