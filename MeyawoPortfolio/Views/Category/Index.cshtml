@model List<MeyawoPortfolio.Models.TblCategory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Kategoriler Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>Kategori ID</th>
        <th>Kategori Adı</th>
     
        <th>Güncelle</th>
        <th>Sil</th>
        <th>Örnekler</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td><a href="#" class="btn btn-success">Güncelle</td>
            <td><a href="#" class="btn btn-danger">Sil</td>
            <td><a href="#" class="btn btn-primary">Örnek Projeler</td>
        </tr>
    }


</table>

